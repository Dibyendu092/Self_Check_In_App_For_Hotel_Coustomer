<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelCheckInActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TextHotel"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="20sp"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/HotelName"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:text="Hotel"
            android:textSize="34sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner">
        </TextView>
        <EditText
            android:id="@+id/CoustomerName"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Coustomer Name"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/CoustomerDateOfBirth"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Coustomer DOB"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>


        <EditText
            android:id="@+id/CoustomerEmail"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Coustomer Email"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/CoustomerAddress"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Coustomer Address"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/CoustomerPhone"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Coustomer Ph No"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/CoustomerEntryTime"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Entry Time(HH:MM)"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/Date"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Date(DD:MM:YY)"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <EditText
            android:id="@+id/AddharCardNo"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Addhar Card No"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>

        <EditText
            android:id="@+id/CoustomerApproxCheckoutTime"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:hint="Coustomer Approx CheckOut Time"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/roundedspinner"
            android:layout_marginTop="10dp">
        </EditText>
        <Button
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:background="@drawable/cornersolid"
            android:text="Check In"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/ButtonCheckInSubmit">

        </Button>




    </LinearLayout>



</ScrollView>