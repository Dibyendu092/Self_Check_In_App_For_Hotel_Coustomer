<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#03A9F4"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="409dp"
        android:layout_height="181dp"
        card_view:cardBackgroundColor="#00BFFF"
        card_view:cardCornerRadius="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="181dp"
            android:background="@drawable/rectangle2">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="198dp"
                android:layout_height="147dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="106dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/ic_baseline_bubble_chart_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="304dp"
        android:layout_height="330dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-350dp"
        android:backgroundTint="#EFECEC"
        card_view:layout_constraintEnd_toStartOf="@+id/cardView6"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#AEA9A9">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/rectangle2"
                android:gravity="center"
                android:hint="Email"
                android:textColor="#EDF2F6"
                android:textColorHint="#ECE2E2"
                android:textSize="34sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/rectangle2"
                android:gravity="center"
                android:hint="Password"
                android:textColor="#2196F3"
                android:textColorHint="#ECE9E9"
                android:textSize="34sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/ed1"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="23dp"
                android:ems="10"
                android:gravity="center"
                android:hint="........"
                android:inputType="textPersonName"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView10" />

            <EditText
                android:id="@+id/ed2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="25dp"
                android:ems="10"
                android:gravity="center"
                android:hint="........"
                android:inputType="textPersonName"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

            <androidx.cardview.widget.CardView
                android:layout_width="254dp"
                android:layout_height="65dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="23dp"
                android:backgroundTint="#00BFFF"
                card_view:cardCornerRadius="40dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/ed2">

                <TextView
                    android:id="@+id/bt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle2"
                    android:gravity="center"
                    android:text="Sing Up"
                    android:textColor="#F3EBEB"
                    android:textSize="34sp" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="195dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView7" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="89dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="55dp"
        card_view:layout_constraintEnd_toStartOf="@+id/imageView6"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView7"
        card_view:srcCompat="@drawable/ic_round_family_restroom_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="67dp"
        android:layout_height="90dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="54dp"
        card_view:layout_constraintEnd_toStartOf="@+id/imageView9"
        card_view:layout_constraintTop_toBottomOf="@+id/pb1"
        card_view:srcCompat="@drawable/ic_baseline_free_breakfast_24" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="74dp"
        android:layout_height="81dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="48dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView7"
        card_view:srcCompat="@drawable/ic_baseline_casino_24" />

</androidx.constraintlayout.widget.ConstraintLayout>